<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InsertRoutineNameActivity">
    <Button
        android:id="@+id/back_insertRoutineName"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/goback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="49dp"/>
    <TextView
        android:id="@+id/addRoutineName_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/back_insertRoutineName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="루틴 추가하기"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        android:gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/checkImg_insertRoutineName"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@id/back_insertRoutineName"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/uncheck"
        android:layout_marginRight="16dp"/>
    <TextView
        android:id="@+id/addRoutineName_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_insertRoutineName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="25dp"
        android:text="루틴 이름을 입력해주세요"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"/>

    <EditText
        android:id="@+id/insertRoutineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex. English Master"
        android:fontFamily="@font/maaxbold"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/addRoutineName_ment"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:imeOptions="actionDone"
        android:inputType="text">
        <requestFocus/>
    </EditText>

</androidx.constraintlayout.widget.ConstraintLayout>