<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/category_list_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    style="@style/DialogAnimation"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_category_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/all_category_cancel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/cancel_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/all_category_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 편집"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/all_category_cancel"
            app:layout_constraintRight_toLeftOf="@id/all_category_check"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/all_category_check"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/check"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_category_selectedCategory"
        app:layout_constraintTop_toBottomOf="@id/all_category_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="58dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/all_category_selectedCategory_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/bluestar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/all_category_selectedCategory_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/all_category_selectedCategory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과제"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@id/all_category_selectedCategory_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_category_available_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/all_category_selectedCategory"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>
    <View
        android:id="@+id/all_category_division_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toBottomOf="@id/all_category_available_colors"
        android:layout_marginTop="23.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_category_not_available_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/all_category_division_line"
        android:layout_marginTop="23.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"/>
    <TextView
        android:id="@+id/all_category_delete_category_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="카테고리 삭제하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/all_category_not_available_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>