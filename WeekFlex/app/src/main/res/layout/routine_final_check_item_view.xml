<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskNameView_finalCheckItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/routineImg_finalCheckItem"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/yellowstar"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/taskName_finalCheckItem"
            app:layout_constraintBottom_toBottomOf="@id/taskName_finalCheckItem"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/taskName_finalCheckItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/routineImg_finalCheckItem"
            android:layout_marginLeft="4dp"
            android:text="원서 읽기"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/deleteTask_finalCheckItem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/black_trashcan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskDateView_finalCheckItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/taskNameView_finalCheckItem"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="28dp">
        <TextView
            android:id="@+id/taskDate_finalCheckItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="화, 수 5:00pm-6:00pm"
            android:textColor="@color/gray_3"
            android:textSize="14dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divideLine_finalCheckItem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_1"
        app:layout_constraintTop_toBottomOf="@id/taskDateView_finalCheckItem"
        android:layout_marginTop="24dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>