<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/myProfile_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이 페이지"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myProfile_userInfo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myProfile_header"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <ImageView
            android:id="@+id/myProfile_profileImg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/gray_circle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/myProfile_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위플"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/myProfile_login_channel"
            app:layout_constraintLeft_toRightOf="@id/myProfile_profileImg"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/myProfile_login_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/myProfile_userName"
            app:layout_constraintLeft_toLeftOf="@id/myProfile_userName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Facebook으로 로그인 됨"
            android:textSize="14dp"
            android:textColor="@color/gray_3"
            android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/myProfile_settings_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관리"
        android:textColor="@color/gray_3"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/myProfile_userInfo_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/myProfile_categorySettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리 관리"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/myProfile_settings_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/myProfile_categorySettings_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/myProfile_categorySettings"
        app:layout_constraintBottom_toBottomOf="@id/myProfile_categorySettings"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/myProfile_taskSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="할 일  관리"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/myProfile_categorySettings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/myProfile_taskSettings_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/myProfile_taskSettings"
        app:layout_constraintBottom_toBottomOf="@id/myProfile_taskSettings"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/myProfile_etc_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textColor="@color/gray_3"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/myProfile_taskSettings"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/myProfile_etc_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/logout_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/logout"
        app:layout_constraintBottom_toBottomOf="@id/logout"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/account_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정 탈퇴"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/logout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/account_withdrawal_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/account_withdrawal"
        app:layout_constraintBottom_toBottomOf="@id/account_withdrawal"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1:1 문의"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/account_withdrawal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/inquiry_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/inquiry"
        app:layout_constraintBottom_toBottomOf="@id/inquiry"
        android:src="@drawable/right_arrow"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버전"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/inquiry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <TextView
        android:id="@+id/version_num"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:text="v1.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/version"
        app:layout_constraintBottom_toBottomOf="@id/version" />
</androidx.constraintlayout.widget.ConstraintLayout>