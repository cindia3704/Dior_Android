<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:background="#ffffff"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="73dp"/>

        <Button
            android:id="@+id/save_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:background="#ffffff"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"/>




    </LinearLayout>

    <EditText
        android:id="@+id/insertCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="카테고리를 적어주세요."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <TextView
        android:id="@+id/allColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        app:layout_constraintLeft_toLeftOf="@+id/insertCategory"
        app:layout_constraintTop_toBottomOf="@+id/insertCategory"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="4dp"/>

    <LinearLayout
        android:id="@+id/selectColors1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/allColors"
        app:layout_constraintLeft_toLeftOf="@+id/allColors"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/red"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FB4F55"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FB4F55"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/yellow"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FECF35"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/blue"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#27A5EC"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/purple"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#A167FE"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/violet"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#6B4CFF"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectColors2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/selectColors1"
        app:layout_constraintLeft_toLeftOf="@+id/selectColors1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/green"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#20D004"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/orange"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FD8B34"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lightpurple"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#7B91FE"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/emerald"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#23ACA0"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pink"
            android:layout_marginRight="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FD6D71"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>