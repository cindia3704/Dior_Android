<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:text="X"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="12dp"
            android:text="카테고리"
            android:textColor="#000000"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/save_add_category"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/save_add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="저장"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/insertCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="카테고리를 적어주세요."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <TextView
        android:id="@+id/allColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        app:layout_constraintLeft_toLeftOf="@+id/insertCategory"
        app:layout_constraintTop_toBottomOf="@+id/insertCategory"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="4dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectColors1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/allColors"
        app:layout_constraintLeft_toLeftOf="@+id/allColors"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FB4F55"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FB4F55"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_red"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#FECF35"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_yellow"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#27A5EC"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_violet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_blue"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#A167FE"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_violet"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:background="#6B4CFF"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>












</androidx.constraintlayout.widget.ConstraintLayout>