<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddRoutineActivity">
    <Button
        android:id="@+id/back_addRoutine"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/goback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="49dp"/>
    <TextView
        android:id="@+id/ment_addRoutine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 루틴"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        app:layout_constraintTop_toBottomOf="@+id/back_addRoutine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"/>
    <TextView
        android:id="@+id/ment_addRoutine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="루틴 카드로 쉽게 할 일을 추가하세요"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:letterSpacing="-0.01"
        app:layout_constraintTop_toBottomOf="@id/ment_addRoutine"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_addRoutine"
        android:nestedScrollingEnabled="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ment_addRoutine2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <Button
        android:id="@+id/makeRoutine_addRoutine"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="New Routine"
        android:background="@drawable/routine_list_rectangle"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_addRoutine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <TextView
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="60dp"
        app:layout_constraintTop_toTopOf="@id/makeRoutine_addRoutine"
        app:layout_constraintBottom_toBottomOf="@id/makeRoutine_addRoutine"
        app:layout_constraintLeft_toLeftOf="@id/makeRoutine_addRoutine"
        android:layout_marginLeft="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>