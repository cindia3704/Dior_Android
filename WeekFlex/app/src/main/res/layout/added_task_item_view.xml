<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginRight="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/addedTaskName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="6dp"
    android:text="원서 읽기"
    android:textColor="@color/black"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"/>
    <ImageView
        android:id="@+id/addedTaskDeleteBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/cancel_btn"
        app:layout_constraintTop_toTopOf="@id/addedTaskName"
        app:layout_constraintBottom_toBottomOf="@id/addedTaskName"
        app:layout_constraintLeft_toRightOf="@id/addedTaskName"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>